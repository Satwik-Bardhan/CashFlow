<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppSettingsActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_left"
            app:title="App Settings" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Data Security Section -->
            <TextView
                style="@style/SettingsHeader"
                android:text="Data Security" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:id="@+id/dataBackup"
                        style="@style/SettingsItem"
                        android:drawableStart="@drawable/ic_cloud_check"
                        android:text="Data Backup"
                        app:drawableEndCompat="@drawable/ic_arrow_right" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/appLockSwitch"
                        style="@style/SettingsItemSwitch"
                        android:drawableStart="@drawable/ic_lock"
                        android:text="App Lock"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Features Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginTop="24dp"
                android:text="Features" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/amountFieldCalculatorSwitch"
                        style="@style/SettingsItemSwitch"
                        android:drawableStart="@drawable/ic_calculator"
                        android:text="Amount Field Calculator"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- General Section -->
            <TextView
                style="@style/SettingsHeader"
                android:layout_marginTop="24dp"
                android:text="General" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">

                    <RelativeLayout style="@style/SettingsItemContainer">

                        <TextView
                            android:id="@+id/changeLanguage"
                            style="@style/SettingsItem"
                            android:drawableStart="@drawable/ic_language"
                            android:text="Change Language"

                            />

                        <TextView
                            android:id="@+id/currentLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="English"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/darkThemeSwitch"
                        style="@style/SettingsItemSwitch"
                        android:drawableStart="@drawable/ic_dark_theme"
                        android:text="Dark Theme"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
