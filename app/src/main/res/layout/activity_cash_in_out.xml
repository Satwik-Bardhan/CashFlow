<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@+id/fixedBottomContainer">

        <LinearLayout
            android:id="@+id/main_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#121212"
                android:paddingTop="24dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_left"
                        android:contentDescription="Back"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CASH FLOW"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="-24dp" /> </LinearLayout>

                <TextView
                    android:id="@+id/cashInOutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Entry" android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/text_background">

                    <LinearLayout
                        android:id="@+id/dateSelectorLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="#000000"
                            android:focusable="true"
                            android:paddingEnd="8dp"
                            android:text="June 17, 2025"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/amountEditText"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white"
                            android:hint="Amount"
                            android:inputType="numberDecimal"
                            android:paddingHorizontal="12dp"
                            android:textColor="#000000"
                            android:textColorHint="#AAAAAA" />

                        <RadioGroup
                            android:id="@+id/inOutToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                            <RadioButton
                                android:id="@+id/radioIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IN"
                                android:background="@drawable/button_cashin"
                                android:button="@android:color/transparent"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:layout_marginEnd="5dp"
                                android:checked="true" />

                            <RadioButton
                                android:id="@+id/radioOut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="OUT"
                                android:background="@drawable/button_cashout"
                                android:button="@android:color/transparent"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp" />
                        </RadioGroup>
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/cashOnlineToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_marginBottom="16dp" >

                        <RadioButton
                            android:id="@+id/radioCash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cash"
                            android:textColor="#000000"
                            android:background="@drawable/button_blue"
                            android:button="@android:color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp"
                            android:layout_marginEnd="5dp"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online"
                            android:textColor="#000000"
                            android:background="@drawable/button_blue"
                            android:button="@android:color/transparent"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="8dp" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/partyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Party(Customer/Supplier)"
                        android:background="@drawable/rounded_white"
                        android:paddingHorizontal="12dp"
                        android:textColor="#000000"
                        android:textColorHint="#AAAAAA"
                        android:layout_marginBottom="16dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/remarkEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Remark"
                        android:background="@drawable/rounded_white"
                        android:paddingHorizontal="12dp"
                        android:textColor="#000000"
                        android:textColorHint="#AAAAAA"
                        android:layout_marginBottom="16dp"
                        android:inputType="textMultiLine"
                        android:maxLines="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attach Image or PDF"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:id="@+id/attachFileButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_attach_file"
                            android:contentDescription="Attach File"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <Spinner
                            android:id="@+id/categorySpinner"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:autofillHints="Category"
                            android:background="@drawable/rounded_white"
                            android:spinnerMode="dropdown"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/selectedCategoryTextView"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp"
                            android:text="Select Category"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:drawableEnd="@drawable/ic_arrow_down"
                            android:drawableTint="#000000" />

                        <View
                            android:id="@+id/categoryColorIndicator"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/rounded_color_indicator"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/saveAndAddNewButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="SAVE &amp; ADD NEW"
                            android:background="@drawable/button_save_add_new"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/saveEntryButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Save Entry"
                            android:backgroundTint="#00C853"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="16dp"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/fixedBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1C1C1C"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingBottom="8dp"> <LinearLayout
        android:id="@+id/btnTransactions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:contentDescription="Transactions Icon"
            android:src="@drawable/ic_transactions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:contentDescription="Home Icon"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:contentDescription="Settings Icon"
                android:src="@drawable/ic_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>