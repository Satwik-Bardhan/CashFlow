<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Category and Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/paymentModeTextView"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/button_blue"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center"
                android:text="Mode"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Party/Supplier Info -->
        <TextView
            android:id="@+id/partyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Party/Customer/Supplier"
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Bottom Row: Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sep 03, 2025"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/transactionTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:24 PM"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Remark (Optional) -->
        <TextView
            android:id="@+id/remarkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:text="Remark text goes here"
            android:textSize="12sp"
            android:textColor="#666666"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
