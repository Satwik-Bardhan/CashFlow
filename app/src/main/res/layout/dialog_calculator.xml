<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/surfaceColor"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/calc_display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rounded_input_readonly"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="?attr/textColorPrimary"
        android:textSize="32sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <Button style="@style/CalcButton" android:text="C" android:id="@+id/btn_clear" android:textColor="#E53935"/>
        <Button style="@style/CalcButton" android:text="÷" android:id="@+id/btn_divide" android:textColor="?attr/balanceColor"/>
        <Button style="@style/CalcButton" android:text="×" android:id="@+id/btn_multiply" android:textColor="?attr/balanceColor"/>
        <Button style="@style/CalcButton" android:text="⌫" android:id="@+id/btn_backspace" android:textColor="?attr/textColorSecondary"/>

        <Button style="@style/CalcButton" android:text="7" android:id="@+id/btn_7"/>
        <Button style="@style/CalcButton" android:text="8" android:id="@+id/btn_8"/>
        <Button style="@style/CalcButton" android:text="9" android:id="@+id/btn_9"/>
        <Button style="@style/CalcButton" android:text="-" android:id="@+id/btn_minus" android:textColor="?attr/balanceColor"/>

        <Button style="@style/CalcButton" android:text="4" android:id="@+id/btn_4"/>
        <Button style="@style/CalcButton" android:text="5" android:id="@+id/btn_5"/>
        <Button style="@style/CalcButton" android:text="6" android:id="@+id/btn_6"/>
        <Button style="@style/CalcButton" android:text="+" android:id="@+id/btn_plus" android:textColor="?attr/balanceColor"/>

        <Button style="@style/CalcButton" android:text="1" android:id="@+id/btn_1"/>
        <Button style="@style/CalcButton" android:text="2" android:id="@+id/btn_2"/>
        <Button style="@style/CalcButton" android:text="3" android:id="@+id/btn_3"/>
        <Button style="@style/CalcButton" android:text="=" android:id="@+id/btn_equals"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:backgroundTint="?attr/incomeColor"
            android:textColor="@android:color/white"/>

        <Button style="@style/CalcButton" android:text="%" android:id="@+id/btn_percent"/>
        <Button style="@style/CalcButton" android:text="0" android:id="@+id/btn_0"/>
        <Button style="@style/CalcButton" android:text="." android:id="@+id/btn_dot"/>
    </GridLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/balanceColor"
        android:text="Use Result"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>