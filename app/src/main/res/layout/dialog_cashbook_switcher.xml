<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- Dialog Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_account_balance_wallet"
                android:contentDescription="Cashbook icon"
                app:tint="#1976D2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_bold"
                android:text="Switch or Add Cashbook"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold"
                android:importantForAccessibility="yes"
                android:accessibilityHeading="true"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_regular"
            android:text="Select a cashbook to switch to, or create a new one"
            android:textColor="#666666"
            android:textSize="14sp"
            android:importantForAccessibility="yes"
            tools:ignore="HardcodedText" />

        <!-- List Container with Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_border_light"
            android:padding="8dp">

            <!-- List Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/inter_medium"
                android:text="Available Cashbooks"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:importantForAccessibility="yes"
                tools:ignore="HardcodedText" />

            <!-- Enhanced ListView -->
            <ListView
                android:id="@+id/cashbookListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="240dp"
                android:minHeight="120dp"
                android:divider="#E0E0E0"
                android:dividerHeight="1dp"
                android:choiceMode="singleChoice"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                android:padding="4dp"
                android:clipToPadding="false"
                android:importantForAccessibility="yes"
                android:contentDescription="List of available cashbooks" />

        </LinearLayout>

        <!-- Empty State Message (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_folder_open"
                android:contentDescription="No cashbooks icon"
                app:tint="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="No cashbooks found"
                android:textColor="#999999"
                android:textSize="16sp"
                android:importantForAccessibility="yes"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_regular"
                android:text="Create your first cashbook to get started"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:importantForAccessibility="yes"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:minWidth="100dp"
                android:fontFamily="@font/inter_medium"
                android:text="Cancel"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:textStyle="bold"
                android:importantForAccessibility="yes"
                android:contentDescription="Cancel and close dialog"
                tools:ignore="HardcodedText" />

            <!-- Add New Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addNewButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:minWidth="120dp"
                android:fontFamily="@font/inter_bold"
                android:text="+ Add New"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#1976D2"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp"
                app:iconTint="#FFFFFF"
                android:importantForAccessibility="yes"
                android:contentDescription="Create a new cashbook"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Loading Indicator (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/loadingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:indeterminateTint="#1976D2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Loading cashbooks..."
                android:textColor="#666666"
                android:textSize="14sp"
                android:importantForAccessibility="yes"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
