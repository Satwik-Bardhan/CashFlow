<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fixedBottomContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E1E"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <!-- HOME BUTTON -->
    <LinearLayout
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            app:tint="@color/bottom_nav_item_color_selector"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/bottom_nav_item_color_selector"
            android:textSize="10sp"
            android:duplicateParentState="true" />
    </LinearLayout>

    <!-- TRANSACTIONS BUTTON -->
    <LinearLayout
        android:id="@+id/btnTransactions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iconTransactions"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_transactions"
            app:tint="@color/bottom_nav_item_color_selector"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/textTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textColor="@color/bottom_nav_item_color_selector"
            android:textSize="10sp"
            android:duplicateParentState="true" />
    </LinearLayout>

    <!-- SETTINGS BUTTON -->
    <LinearLayout
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iconSettings"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            app:tint="@color/bottom_nav_item_color_selector"
            android:duplicateParentState="true" />

        <TextView
            android:id="@+id/textSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@color/bottom_nav_item_color_selector"
            android:textSize="10sp"
            android:duplicateParentState="true" />
    </LinearLayout>
</LinearLayout>
