<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".FiltersActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="?attr/surfaceColor"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="18dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button_desc"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/textColorPrimary"
                android:padding="6dp"
                android:importantForAccessibility="yes" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filters"
                    android:textColor="?attr/textColorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/headerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refine your search"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageView
                android:id="@+id/resetButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/balanceColor"
                android:padding="6dp"
                android:importantForAccessibility="yes" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:layout_above="@+id/bottomActionBar"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="80dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="?attr/textColorSecondary"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/searchTransactionInput"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Search by remarks, reference, or notes"
                        android:textColor="?attr/textColorPrimary"
                        android:textColorHint="?attr/textColorHint"
                        android:background="@null"
                        android:textSize="16sp"
                        android:inputType="text" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Range"
                        android:textColor="?attr/textColorPrimary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/filterTodayButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Today"
                            android:textColor="?attr/textColorPrimary"
                            app:backgroundTint="@null"
                            android:textSize="13sp"
                            android:background="@drawable/quick_option_button"
                            android:layout_marginEnd="6dp" />

                        <Button
                            android:id="@+id/filterWeekButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="This Week"
                            android:textColor="?attr/textColorPrimary"
                            app:backgroundTint="@null"
                            android:textSize="13sp"
                            android:background="@drawable/quick_option_button"
                            android:layout_marginEnd="6dp" />

                        <Button
                            android:id="@+id/filterMonthButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Month"
                            android:textColor="?attr/textColorPrimary"
                            app:backgroundTint="@null"
                            android:textSize="13sp"
                            android:background="@drawable/quick_option_button" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/startDateLayout"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_input_background"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/startDateText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Start Date"
                                android:textColor="?attr/textColorHint"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="?attr/textColorSecondary" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/endDateLayout"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_input_background"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/endDateText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="End Date"
                                android:textColor="?attr/textColorHint"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="?attr/textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <include layout="@layout/layout_transaction_type" />
            <include layout="@layout/fragment_payment_mode_filter" />
            <include layout="@layout/layout_party_reference" />
            <include layout="@layout/layout_category" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/surfaceColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tags"
                        android:textColor="?attr/balanceColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <EditText
                        android:id="@+id/filterTagsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Add or search by tag"
                        android:textColor="?attr/textColorPrimary"
                        android:textColorHint="?attr/textColorHint"
                        android:background="@drawable/rounded_input_background"
                        android:padding="12dp"
                        android:textSize="15sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/surfaceColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activeFiltersCount"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/badge_background"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Filters"
                    android:textColor="?attr/textColorSecondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/clearAllButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="CLEAR"
                android:textColor="?attr/expenseColor"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:background="@drawable/button_clear"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/applyFiltersButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="APPLY FILTERS"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:backgroundTint="@null"
                android:textStyle="bold"
                android:background="@drawable/button_apply"
                android:paddingHorizontal="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>