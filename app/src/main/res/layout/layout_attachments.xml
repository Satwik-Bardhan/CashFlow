<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:drawablePadding="8dp"
        android:text="Attachments"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableTint="#607D8B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add photos, documents, or scan items"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/cameraButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/camera_ripple"
                android:clickable="true"
                android:contentDescription="Take Photo"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#2196F3"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/scanButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/scan_ripple"
                android:clickable="true"
                android:contentDescription="Scan Barcode"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_qr_code"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#FF9800"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/attachFileButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/attach_ripple"
                android:clickable="true"
                android:contentDescription="Attach File"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_attach_file"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
