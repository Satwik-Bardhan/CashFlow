<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Party / Reference"
        android:textColor="?attr/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:drawableTint="@color/category_rent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="?attr/surfaceColor"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/partySelectorLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_ripple"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/partyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Party (Customer/Supplier)"
                android:textColor="?attr/textColorPrimary"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/searchPartyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_search"
                app:tint="?attr/textColorSecondary" />

            <ImageView
                android:id="@+id/partyPickerIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                app:tint="?attr/textColorSecondary" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>