<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:fitsSystemWindows="true"
    tools:context=".DownloadOptionsActivity">

    <!-- Modernized Card Header Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardBackgroundColor="#1E1E1E"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="28dp"
            android:paddingBottom="18dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button_desc"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FFFFFF"
                android:padding="6dp"
                android:importantForAccessibility="yes" />

            <!-- Share Button -->
            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FFFFFF"
                android:padding="6dp"
                android:importantForAccessibility="yes" />

            <!-- Centered Title and Subtitle -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASH FLOW"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_download"
                        android:layout_marginEnd="8dp"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/headerSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download Report"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerCard"
        android:layout_above="@+id/downloadActionButton"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date Range Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Range"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Date Selection Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:id="@+id/startDateLayout"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_input_background"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/startDateText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Start Date"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#AAAAAA" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/endDateLayout"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_input_background"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/endDateText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="End Date"
                                android:textColor="#AAAAAA"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="#AAAAAA" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Quick Date Options -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Options"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/todayButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="Today"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:background="@drawable/quick_option_button"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/thisWeekButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="This Week"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:background="@drawable/quick_option_button"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/thisMonthButton"
                            android:layout_width="0dp"
                            android:layout_height="36dp"
                            android:layout_weight="1"
                            android:text="This Month"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:background="@drawable/quick_option_button" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Entry Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Type"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioGroup
                        android:id="@+id/entryTypeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioAll"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="All Transactions"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:checked="true"
                            android:drawableStart="@drawable/ic_all_transactions"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            app:drawableTint="#2196F3" />

                        <RadioButton
                            android:id="@+id/radioCashIn"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cash In Only"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_arrow_upward"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            app:drawableTint="#4CAF50" />

                        <RadioButton
                            android:id="@+id/radioCashOut"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cash Out Only"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_arrow_downward"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            app:drawableTint="#F44336" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Mode Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioGroup
                        android:id="@+id/paymentModeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioAllModes"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="All Payment Modes"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:checked="true"
                            android:drawableStart="@drawable/ic_payment_all"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            app:drawableTint="#2196F3" />

                        <RadioButton
                            android:id="@+id/radioCashMode"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cash Only"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_money"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical" />

                        <RadioButton
                            android:id="@+id/radioOnlineMode"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Online Only"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_online_payment"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            app:drawableTint="#9C27B0" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Report Format Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Format"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/formatPdfButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="PDF"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:background="@drawable/format_button_selected"
                        android:drawableTop="@drawable/ic_pdf"
                        android:drawablePadding="4dp"
                        android:layout_marginEnd="8dp"
                        app:drawableTint="#FFFFFF" />

                    <Button
                        android:id="@+id/formatExcelButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="EXCEL"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:background="@drawable/format_button_unselected"
                        android:drawableTop="@drawable/ic_excel"
                        android:drawablePadding="4dp"
                        android:layout_marginStart="8dp"
                        app:drawableTint="#AAAAAA" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Download Action Button -->
    <Button
        android:id="@+id/downloadActionButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="DOWNLOAD REPORT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_download"
        android:drawableStart="@drawable/ic_download"
        android:drawablePadding="8dp"
        app:drawableTint="#FFFFFF" />

</RelativeLayout>
