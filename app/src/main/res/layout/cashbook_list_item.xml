<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/ripple_background"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="4dp">

    <!-- Cashbook Icon -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_account_balance_wallet"
        android:layout_marginEnd="16dp"
        android:contentDescription="Cashbook icon"
        app:tint="#2196F3" />

    <!-- Cashbook Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cashbookNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record Book"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/inter_medium" />

        <TextView
            android:id="@+id/cashbookStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Current)"
            android:textColor="#2196F3"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter_regular"
            android:visibility="gone" />

        <!-- Balance Info -->
        <TextView
            android:id="@+id/cashbookBalanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balance: â‚¹0.00"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter_regular" />

    </LinearLayout>

    <!-- Current Indicator Badge -->
    <View
        android:id="@+id/currentIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/current_indicator_dot"
        android:layout_marginEnd="12dp"
        android:visibility="gone" />

    <!-- 3-Dot Menu Button -->
    <ImageView
        android:id="@+id/cashbookMenuButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Cashbook options menu"
        app:tint="#AAAAAA" />

</LinearLayout>
