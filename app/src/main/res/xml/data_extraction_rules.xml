<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!--
        Specify what data to include and exclude from cloud backups.
        By default, all files in the app's internal storage, except for
        'no_backup' directories, are included.
        -->
        <include domain="sharedpref" />
        <exclude domain="database" path="guest_transactions.db" />
        <!-- Exclude other sensitive data as needed -->
    </cloud-backup>
    <device-transfer>
        <!--
        Specify what data to include and exclude from device-to-device transfers.
        By default, all files are included.
        -->
        <include domain="sharedpref" />
        <include domain="database" />
        <!-- Exclude other sensitive data as needed -->
    </device-transfer>
</data-extraction-rules>
